<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Chat</title>
        <!-- TailWind -->
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body
        class="flex flex-col items-center justify-center w-screen min-h-screen bg-gray-100 text-gray-800 p-10"
    >
        <div
            class="flex flex-col flex-grow w-full max-w-xl bg-white shadow-xl rounded-lg overflow-hidden"
        >
            <div
                id="messagesCenter"
                class="flex flex-col flex-grow h-0 p-4 overflow-auto"
            >
                <% messages.forEach(m => { %> <%-
                include('../components/chatMessage.ejs', { message: m }) %> <%
                }); %>
            </div>

            <div class="bg-gray-300 p-4 flex flex-col">
                <div class="flex items-center">
                    <label class="mr-3">Email</label>
                    <input
                        id="emailInput"
                        class="flex items-center h-10 w-full rounded px-3 text-sm"
                        type="email"
                        placeholder="Youremail@gmail.com"
                        required
                    />
                </div>
                <input
                    id="messageInput"
                    class="my-3 flex items-center h-10 w-full rounded px-3 text-sm"
                    type="text"
                    placeholder="Type your messageâ€¦"
                    required
                />
                <button
                    onclick="sendMessage()"
                    class="self-end text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center"
                >
                    Send
                </button>
            </div>
        </div>

        <!-- socketio script -->
        <script src="/socket.io/socket.io.js"></script>
        <!-- JS -->
        <script src="/static/chat.js"></script>
    </body>
</html>
